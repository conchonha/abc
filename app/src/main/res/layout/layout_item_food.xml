<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:background="@drawable/boder_item_food"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="19dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_food" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_name_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxWidth="150dp"
                android:maxLines="1"
                android:text="Hambuger"
                android:textColor="@color/h000000"
                android:textSize="@dimen/textSize12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_price_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:ellipsize="end"
                android:maxWidth="150dp"
                android:maxLines="1"
                android:text="25000"
                android:textColor="@color/h000000"
                android:textSize="@dimen/textSize12"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="9dp"
            android:gravity="end">

            <ImageView
                android:id="@+id/img_pree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:clickable="true"
                android:foreground="?attr/actionBarItemBackground"
                android:src="@drawable/ic_pree" />

            <TextView
                android:id="@+id/txt_number_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:text="1"
                android:textColor="@color/h000000"
                android:textSize="@dimen/textSize12" />

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="?attr/actionBarItemBackground"
                android:src="@drawable/ic_next" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>